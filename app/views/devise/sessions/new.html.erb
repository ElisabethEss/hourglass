<div class="main-card-login">
  <div class="w-100">
    <h2 class="zelda-font-login">Log in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "w-100"}) do |f| %>
      <div class="form-inputs-login w-100">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" },
                    input_html: { class: 'login-input' },
                    placeholder: "Email",
                    label: false %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" },
                    input_html: { class: 'login-input' },
                    placeholder: "Password",
                    label: false %>
      </div>
      <div class="d-flex justify-content-between"><%= render "devise/shared/links" %></div>
      <div class="form-actions">
        <%= f.button :submit, "Log in", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
